"./Libraries/std.funny" attach

func trial-and-error
	"True or false (1/0)" print input
	if
		"true" print
	else
		"false" print
		"Enter a number to add" print pop input
		"Enter another number" print pop input
		+ print
	end
end 

func truth-machine
	"1 or 0" print input
	if
		1 while
			1 write
		end
	else
		0 print
	end
end 